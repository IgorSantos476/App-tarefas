<html>
    <head>
        <!-- CSS -->
        <link href="/css/edit.css" rel="stylesheet">

        <!-- BOOTSTRAP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <!-- FONT AWESOME -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        <!-- FONT GOOGLE -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bungee+Tint&display=swap" rel="stylesheet">

        <meta charset="UTF-8">
    </head>

    <body style="background-color: rgb(233, 233, 233);">

        <!-- NAVBAR IMPORT -->
        <%- include('navbar') %>

        
        <div class="container">
            <div class="edit-all">
                <div class="edit-header">
                    <ul>
                        <li>
                            <span class="icon_main"> <i class="fa-solid fa-file-pen"></i> </span>
                        </li>
                        <li>
                            <h3>EDITANDO TAREFA:</h3>
                        </li>
                    </ul>
                </div> <br><br>

                <div class="edit-body">
                    <div>
                        <form method="POST" action="/router/edit/<%- task.id %>" id="formEdit">
                            <input type="text" name="newTask" class="form-control" value="<%- task.task %>" id="inputEdit">
                            <button type="submit" class="btn btn-primary">Confirmar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </body>
</html>