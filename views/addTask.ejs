<html>
    <head>
        <!-- CSS -->
        <style>

            #content {
                padding-top: 200px;
            }

            #form_add h2{
                text-align: center;
                margin-bottom: 30px;
            }

            #inputAdd {
                border: none;
            }

        </style>


        <!-- BOOTSTRAP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <!-- FONT AWESOME -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        <meta charset="UTF-8">
    </head>


    <body style="background-color: rgb(233, 233, 233);">

        <!-- NAVBAR IMPORT -->
        <%- include('navbar') %>


        <div class="container" id="content">

            <div class="card">

                <form method="POST" action="/router/save" id="form_add" class="form">
                    <div class="card-body">
                        <h2>Adicione sua tarefa abaixo</h2>
                        <input id="inputAdd" type="text" name="task" class="form-control" placeholder="Adicionar nova tarefa...">
                    </div>

                    <div class="card-header">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </body>
</html>